<script>
    function quickChalenge(min, inc) {
        if (!userName) {
            window.location.href = '/user/login';
            return;
        }
        let data = {
            gameTimeMins: min,
            gameTimeSecs: 0,
            timeIncresment: inc,
            rated: true,
            selectedColor: 'wb'
        }
        openChalengeCreator.emit(data);
    }
</script>