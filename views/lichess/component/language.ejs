<div>
    <% function selectLang(lang){
        if(user.lang == lang) {
            return 'checked';
        }
    } %>


        <div class="form-check  dir-ltr">
            <input class="form-check-input" type="radio" name="language" id="language2" value="en" <%- selectLang( 'en') %>>
            <label class="form-check-label" for="language2">
English
  </label>
        </div>
        <div class="form-check dir-ltr">
            <input class="form-check-input" type="radio" name="language" id="language" value="fa" <%- selectLang( 'fa') %>>
            <label class="form-check-label" for="flexRadioDefault1">
    Persian فارسی
  </label>
        </div>
</div>
<script>
    $(document).ready(function() {
            $('input[type="radio"][name="language"]').change(function() {
                socket.emit('changeLanguage', {
                    lang: this.value
                }, function() {
                    location.reload();
                })

            });
        })
        // document.querySelector('input[name="gender"]:checked').value
</script>