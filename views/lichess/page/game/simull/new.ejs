<%- include('../../../share/superheader') -%>
    <%- include('../../../component/mainnav') -%>
        <div class="container-fluid row d-flex justify-content-center ">
            <div class="col-lg-10">
                <div class="wg-box dir-ltr">
                    <div class=" fs-2 p-4">
                        Host a new simul
                    </div>
                    <div class="p-4">
                        When you create a Simul, you get to play several players at once.
                    </div>
                    <style>
                        .subFont {
                            font-size: 13px;
                        }
                        
                        .titleFont {
                            font-weight: bold;
                        }
                    </style>
                    <div>
                        <div class="row p-4">
                            <div class="">
                                <label for="simullName" class="form-label titleFont">Name</label>
                            </div>
                            <div class="row d-flex align-items-center">
                                <div class="col-auto">
                                    <input type="text" class="form-control" id="simullName">
                                </div>
                                <div class="col-auto">
                                    <label for="simullName" class="form-label">Simull</label>
                                </div>
                            </div>
                            <div class="subFont" style="">Anything even slightly inappropriate could get your account closed.</div>

                        </div>
                        <div class="row p-4">
                            <div class="col-lg-5">
                                <div>
                                    <div class="">
                                        <label for="esimullName" class="form-label titleFont">Clock initial time</label>
                                    </div>
                                    <select id="clockTime" name="clockTime" class="form-select"><option value="5">5 minutes</option><option value="10">10 minutes</option><option value="15">15 minutes</option><option value="20" selected="selected">20 minutes</option><option value="30">30 minutes</option><option value="40">40 minutes</option><option value="50">50 minutes</option><option value="60">60 minutes</option><option value="70">70 minutes</option><option value="80">80 minutes</option><option value="90">90 minutes</option><option value="120">120 minutes</option><option value="140">140 minutes</option><option value="160">160 minutes</option><option value="180">180 minutes</option></select>
                                    <div class="subFont">
                                        Fischer Clock setup. The more players you take on, the more time you may need.
                                    </div>

                                </div>


                            </div>
                            <div class="col-lg-2"></div>
                            <div class="col-lg-5">
                                <div>
                                    <div class="">
                                        <label for="esimullName" class="form-label titleFont">Clock increment</label>
                                    </div>
                                    <select id="clockIncrement" name="clockIncrement" class="form-select"><option value="0">0 seconds</option><option value="1">1 second</option><option value="2">2 seconds</option><option value="3">3 seconds</option><option value="4">4 seconds</option><option value="5">5 seconds</option><option value="6">6 seconds</option><option value="7">7 seconds</option><option value="10">10 seconds</option><option value="15">15 seconds</option><option value="20">20 seconds</option><option value="25">25 seconds</option><option value="30">30 seconds</option><option value="40">40 seconds</option><option value="50">50 seconds</option><option value="60" selected="selected">60 seconds</option><option value="90">90 seconds</option><option value="120">120 seconds</option><option value="150">150 seconds</option><option value="180">180 seconds</option></select>
                                </div>

                            </div>


                        </div>
                        <div class="row p-4">
                            <div class="col-lg-5">
                                <div>
                                    <div class="">
                                        <label for="esimullName" class="form-label titleFont">Host extra clock time</label>
                                    </div>
                                    <select id="clockExtra" name="clockExtra" class="form-select"><option value="0" selected="selected">0 minutes</option><option value="5">5 minutes</option><option value="10">10 minutes</option><option value="15">15 minutes</option><option value="20">20 minutes</option><option value="30">30 minutes</option><option value="40">40 minutes</option><option value="50">50 minutes</option><option value="60">60 minutes</option><option value="90">90 minutes</option><option value="120">120 minutes</option>
                                    </select>
                                    <div class="subFont">
                                        You may add extra time to your clock to help you cope with the simul.
                                    </div>

                                </div>

                            </div>
                            <div class="col-lg-2"></div>
                            <div class="col-lg-5">
                                <div>
                                    <div class="">
                                        <label for="esimullName" class="form-label titleFont">Host color for each game</label>
                                    </div>
                                    <select id="color" class="form-select" aria-label="Default select example">
                                        <!-- <option selected>Open this select menu</option> -->
                                        <option value="w">White</option>
                                        <option value="b">Black</option>
                                    </select>
                                </div>

                            </div>
                            <hr class="mt-4 ">
                            <div class="my-3 d-flex justify-content-between">
                                <a class="text-primary">
                                    Cancel
                                </a>
                                <button class="btn btn-primary" onclick="creatSimul()">
                                    <i class="fas fa-trophy"></i> Host new simul
                                </button>

                            </div>


                        </div>
                    </div>
                </div>
            </div>

        </div>

        </div>
        </div>
        <script>
            function creatSimul() {
                let name = document.getElementById('simullName').value.trim();
                if (!name) return;
                let clockTime = document.getElementById('clockTime').value.trim();
                let clockIncrement = document.getElementById('clockIncrement').value.trim();
                let clockExtra = document.getElementById('clockExtra').value.trim();
                let color = document.getElementById('color').value.trim();
                let simullData = {
                    name,
                    clockTime,
                    clockIncrement,
                    clockExtra,
                    color
                }
                socket.emit('creatSimull', simullData, simullCreatAnswer);
            }

            function simullCreatAnswer(data) {
                window.location.replace('/simull/main')
                console.log('ok', data);
            }
        </script>
