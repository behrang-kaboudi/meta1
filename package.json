{
  "name": "pm-lichess",
  "version": "1.0.0",
  "description": "PMChess play",
  "repository": {
    "private": true
  },
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "NODE_ENV=development nodemon index.js",
    "start": "NODE_ENV=production node index.js",
    "debug": "nodemon --inspect index.js",
    "prepare": "husky",
    "lint": "eslint --cache index.js app.js module/**/*.js rout/**/*.js",
    "lint:fix": "eslint --cache --fix index.js app.js module/**/*.js rout/**/*.js",
    "lint:ci": "eslint --cache --no-warn-ignored --quiet --rule 'no-undef:0' --rule 'no-unused-vars:0' --rule 'n/no-missing-require:0' index.js app.js module/**/*.js rout/**/*.js",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "format:check:ci": "prettier -c --ignore-unknown ."
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix --quiet --no-warn-ignored",
      "prettier -w"
    ],
    "*.{json,md,mdx,yml,yaml,css,scss,html}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ckeditor/ckeditor5-build-classic": "^29.2.0",
    "@ckeditor/ckeditor5-upload": "^29.2.0",
    "@mliebelt/pgn-parser": "^1.2.8",
    "bootstrap": "^5.1.3",
    "chess.js": "^0.11.0",
    "config": "^3.3.3",
    "consolidate": "^0.16.0",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "express-rate-limit": "^8.0.1",
    "joi": "^17.4.0",
    "jquery": "^3.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.1.2",
    "nodemailer": "^6.9.13",
    "pgn-parser": "^2.1.1",
    "public": "^0.1.5",
    "sendmail": "^1.6.1",
    "socket.io": "^4.0.0",
    "stockfish": "^12.0.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.21.3",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2"
  }
}
